<li class="product">
    <%= img_button_to image_tag(product.image_url) , line_items_path(product_id: product ), remote: true %>
    <h2><%= product.title %></h2>
    <p>
        <%= sanitize(product.description) %>
    </p>
    <div class='price'>
        <%= number_to_currency(product.price) %>
        <%= button_to 'Add to cart' , 
            line_items_path(product_id: product ), remote: true %>
    </div>
</li>